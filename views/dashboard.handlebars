  <div class="container m-4">
    <h1>Dashboard</h1>
    <hr class="my-4">
    <div class="row d-flex justify-content-center">
      <button type="submit" class="btn btn-primary w-25" id="create-new-post">Create new post</button>
      <br>
          {{#each posts as |post|}}
          {{> post-info post}}
          <br>
          <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
          {{/each}}
    </div>
  </div>
</div>

