<div class="container mt-5">
  <div class="row d-flex justify-content-center">
      <div class="col-md-6">
          <div class="main-body">
              <div class="card">
                  <div class="card-header">
                      <a href="/post/{{id}}" class="links">{{title}}</a>
                      <p> Posted by: {{user.username}}</b> on <b>{{formatDate created_at}}</b></p>
                  </div>
                  <div class="card-body">
                      <p>{{content}}</p>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
